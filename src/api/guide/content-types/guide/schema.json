{
  "kind": "collectionType",
  "collectionName": "guides",
  "info": {
    "singularName": "guide",
    "pluralName": "guides",
    "displayName": "Guide",
    "description": "Downloadable guides for Slimio resources"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "heroSubtitle": {
      "type": "string"
    },
    "intro": {
      "type": "richtext"
    },
    "bullets": {
      "type": "component",
      "repeatable": true,
      "component": "shared.guide-bullet"
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "formTitle": {
      "type": "string"
    },
    "formDescription": {
      "type": "text"
    },
    "activeCampaignFormId": {
      "type": "integer"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}


